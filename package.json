{
  "name": "tp-viewer3d",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build && vite build --config vite.worker.config.ts",
    "build:lib": "tsc -p tsconfig.build.json && vite build",
    "build:worker": "vite build --config vite.worker.config.ts",
    "preview": "vite preview",
    "pack": "npm run build && npm pack && node scripts/move-pack.js",
    "pack-2": "npm run build && npm pack",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx}\"",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "stats.js": "^0.17.0",
    "three": "^0.182.0",
    "three-mesh-bvh": "^0.9.1"
  }
}
